<div class="container width:100%">

  <div class="carousel banner">
    <% if @user.photos.present? %>
      <% @user.photo.key.each_with_index do |photo, index| %>
      <input type="radio" id="carousel-<%= index + 1 %>" name="carousel[]" <%= index == 0? "checked" : "" %>>

      <ul class="carousel__items">
        <li class="carousel_item"><% cl_image_tag user.photo.key %></li>
      </ul>
      <div class="carousel__prev">
        <label for="carousel-<%= index + 1 %>"></label>
      </div>
      <div class="carousel__next">
        <label for="carousel-<%= index + 1 %>"></label>
      </div>
      <div class="carousel__nav">
        <label for="carousel-<%= index + 1 %>"></label>
      </div>
      <% end %>
    <% else %>
      <%= image_tag("no-photo.jpg") %>
    <% end %>
  </div>

  <div class="d-flex avatar-container">
    <div class="avatar">
      <%= form_for @user do |f| %>
        <label for="user_avatar">
          <% if @user.avatar.key.present? %>
            <%= cl_image_tag @user.avatar.key %>
          <% else %>
            <i class="fas fa-cat" title="Upload the profile picture"></i>
          <% end %>
        </label>
        <%= f.file_field :avatar, accept: 'image/png,image/jpeg' %>
    <% end %>
    </div>

    <div id="heart">
      <i class="fas fa-duotone fa-heart"></i>
    </div>
  </div>
  <div class="form-row">
    <div class="col-6 cat-info-form" data-controller="edit-cat">

      <%= form_for @user, html: { data: { edit_cat_target: 'form' } } do |f| %>
        <p data-action="click->edit-cat#displayNameField"><b>Name: <%= f.text_field :name, 'data-edit-cat-target': 'name', class: 'd-none' %></b></p>
        <p data-action="click->edit-cat#displayGenderField"><b>Gender: <%= f.text_field :gender, 'data-edit-cat-target': 'gender', class: 'd-none' %></b></p>
        <p data-action="click->edit-cat#displayBreedField"><b>Breed: <%= f.text_field :breed, 'data-edit-cat-target': 'breed', class: 'd-none' %></b></p>
        <p data-action="click->edit-cat#displayDescriptionField"><b>Description: <%= f.text_field :description, as: :text, :input_html => { :rows => 10 }, 'data-edit-cat-target': 'description', class: 'd-none' %></b></p>
      <% end %>
    </div>

    <div class="col-6">
      <%= simple_form_for @user, html: { class: 'd-none' } do |f| %>
        <%= f.input :owner_name %>
        <%= f.input :owner_description, as: :text, :input_html => { :rows => 10 } %>
        <%= f.input :photos, as: :file %>
      <% end %>

    </div>
  </div>

</div>
