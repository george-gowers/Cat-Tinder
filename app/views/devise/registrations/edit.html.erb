<div>
  <% if @user.photos.present? %>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <% @user.photos.each_with_index do |photo, index| %>
          <div class="carousel-item <%= index ==0? 'active' : "" %>">
            <%= cl_image_tag photo.key, class: "d-block img-fluid w-100" %>
            <div class="carousel-caption d-md-block d-none"></div>
          </div>
        <% end %>
      </div>
      <!-- Controls -->
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  <% else %>
    <%= image_tag("no-photo.jpg", class: "cat-banner", style: 'width:100%') %>
  <% end %>
</div>

<div class="container information">
  <div class="d-flex avatar-container">
    <div class="avatar" data-controller="edit-cat">
      <%= render 'avatar_form' %>
    </div>

    <div id="heart">
      <i class="fas fa-duotone fa-heart"></i>
    </div>
  </div>
  <div class="form-row">
    <div class="col-6 cat-info-form" data-controller="edit-cat">
      <%= render 'cat_info_form' %>
    </div>
    <div class="col-6 owner-info-form" data-controller="edit-owner">
      <%= render 'owner_info_form' %>
      <%= form_for @user do |f| %>
      <div class="photos-buttons">
        <label for="user_photos">
          <i class="fas fa-solid fa-images"></i>
        </label>
        <%= f.file_field :photos, multiple: true, crop: :fill  %>
        <%= f.submit "Add photos", class: "add_photos" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
