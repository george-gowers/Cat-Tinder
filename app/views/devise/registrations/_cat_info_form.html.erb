<div class="col-6 cat-info-form" data-controller="edit-cat">
  <%= form_for @user, html: { data: { edit_cat_target: 'form' } } do |f| %>
    <p data-action="click->edit-cat#displayNameField">
      <b>Name: <%= f.text_field :name, 'data-edit-cat-target': 'name', class: 'not-focused', 'data-action': 'blur->edit-cat#update' %></b>
    </p>
    <p data-action="click->edit-cat#displayGenderField">
      <b>Gender: <%= f.text_field :gender, 'data-edit-cat-target': 'gender', class: 'not-focused', 'data-action': 'blur->edit-cat#update' %></b>
    </p>
    <p data-action="click->edit-cat#displayBreedField">
      <b>Breed: <%= f.text_field :breed, 'data-edit-cat-target': 'breed', class: 'not-focused', 'data-action': 'blur->edit-cat#update' %></b>
    </p>
    <p data-action="click->edit-cat#displayDescriptionField">
      <b>Description: <%= f.text_field :description, as: :text, :input_html => { :rows => 10 }, 'data-edit-cat-target': 'description', class: 'not-focused', 'data-action': 'blur->edit-cat#update' %></b>
    </p>
  <% end %>
</div>
