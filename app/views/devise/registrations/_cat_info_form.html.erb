<%= form_for @user, html: { data: { edit_cat_target: 'form' } } do |f| %>
  <p data-action="click->edit-cat#displayNameField">
    <b>Name: <%= f.text_field :name, 'data-edit-cat-target': 'name', class: 'not-focused', 'data-action': 'blur->edit-cat#update' %></b>
  </p>
  <p data-action="click->edit-cat#displayGenderField">
    <b>Gender: <%= select :user, :gender, ['female', 'male'], { include_blank: true }, 'data-edit-cat-target': 'gender', class: 'not-focused', 'data-action': 'blur->edit-cat#update' %></b>
  </p>
  <p data-action="click->edit-cat#displayBreedField">
    <b>Breed: <%= select :user, :breed, ['Siamese', 'Persian', 'Maine Coon', 'Ragdoll', 'Bengal', 'Abyssinian', 'Birman', 'Oriental Shorthair', 'Sphynx', 'Devon Rex', 'Himalayan', 'American Shorthair', 'other - but still fabulous'], { include_blank: true }, 'data-edit-cat-target': 'breed', 'data-action': 'blur->edit-cat#update' %></b>
  </p>
  <p data-action="click->edit-cat#displayDescriptionField">
    <b>Description: <%= f.text_area :description, size: '40x10', 'data-edit-cat-target': 'description', class: 'not-focused', 'data-action': 'blur->edit-cat#update' %></b>
  </p>
<% end %>
