<div class="col-6 owner-info-form" data-controller="edit-owner">
  <%= form_for @user, html: { data: { edit_owner_target: 'form' } } do |f| %>
    <p data-action="click->edit-owner#displayNameField">
      <b>Name: <%= f.text_field :owner_name, 'data-edit-owner-target': 'ownerName', class: 'not-focused', 'data-action': 'blur->edit-owner#update' %></b>
    </p>
    <p data-action="click->edit-owner#displayDescriptionField">
      <b>Description: <%= f.text_field :owner_description, as: :text, :input_html => { :rows => 10 }, 'data-edit-owner-target': 'ownerDescription', class: 'not-focused', 'data-action': 'blur->edit-owner#update' %></b>
    </p>
    <%= f.file_field  :photos, as: :file %>
  <% end %>
</div>
