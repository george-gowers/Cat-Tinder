<div class="login">
  <div class="container w-25 p-3 text-center input-container">
    <h2 class="login-btn">Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
            required: false,
            autofocus: true,
            label: false,
            input_html: { autocomplete: "email" } %>
        <%= f.input :password,
            required: false,
            label: false,
            input_html: { autocomplete: "password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions btn login_button mb-3">
        <%= f.button :submit, "Log in", class:'button_text' %>
      </div>
    <% end %>
    <p>Or</p>
    <%= render "devise/shared/links", class: "mb-3" %>
  </div>
</div>
