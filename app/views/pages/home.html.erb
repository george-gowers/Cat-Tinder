<section id="banner">
  <div class="container">
    <div class="row">
      <div class="col-sm cntr">
        <h1><span id="banner-typed-text"></span></h1>
        <button class="btn btn-outline-primary btn-lg mt-3">Let's Begin</button>
      </div>
      <div class="col-sm">
        <%= image_tag "cat-love3.png", width: 350 %>
      </div>
    </div>
  </div>
</section>
<section id="info">
  <div class="container">
    <div class="row">
      <div class="col-sm">
        <%= image_tag "catlove2.jpg", width: 450, class: "rounded-img p-3 m-3" %>
      </div>
      <div class="col-sm">
        <h4 class="mt-4">How Purrfectmatch works?</h4>
        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Est facere labore iste necessitatibus officiis eligendi aliquam magnam rem consequatur vero.</p>
        <div class="info-board">
          <div class="board-items p-2">
            <i class="fas fa-sign-in-alt fa-2x"></i>
            <p class="font-weight-bold">Sign-up.</p>
          </div>
          <div class="board-items p-2">
            <i class="fas fa-search fa-2x"></i>
            <p class="font-weight-bold">Search.</p>
          </div>
          <div class="board-items p-2">
            <i class="fas fa-comment fa-2x"></i>
            <p class="font-weight-bold">Message.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>
<section id="contact-us mt-5">
  <div class="container">
    <div class="contact-clean">
      <form action="https://formcarry.com/s/wnHunL6STDg" method="POST" accept-charset="UTF-8" >
        <h2 class="text-center mt-3">Contact us</h2>
        <div class="form-group"><input class="form-control" type="text" name="name" placeholder="Name"></div>
        <div class="form-group"><input class="form-control" type="email" name="email" placeholder="Email"></div>
        <div class="form-group">
          <textarea class="form-control" name="message" placeholder="Message" rows="5"></textarea>
        </div>
        <div class="form-group"><button class="btn btn-outline-primary w-100" type="submit">Submit</button></div>
        <input type="hidden" name="_gotcha">
      </form>
    </div>
  </div>
</section>
